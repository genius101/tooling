name: install softwares
  hosts:  webservers
  become: true
  tasks:
name: print the hostname
    command: hostname
name: install base packages
    ansible.builtin.apt:
      update_cache: yes
      name: "{{ default_packages }}"
    vars:
      default_packages:
python3
git
pip
